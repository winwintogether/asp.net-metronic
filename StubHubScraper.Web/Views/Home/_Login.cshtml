@model StubHubScraper.Web.Models.LoginModel


@using (Html.BeginForm("JsonLogin", "User", new { ReturnUrl = "" }, FormMethod.Post, new { id = "loginForm" }))
{
    @Html.AntiForgeryToken()
    <br /> 
    <h3>Login to Ticket Statistics</h3> 
    <hr /> 
    <div class="control-group">
        @Html.LabelFor(m => m.UserName, new {@class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.UserName, new { autofocus = "autofocus", id = "loginName", @class = "input-validation-error input-xlarge" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.Password, new {@class = "control-label" })
        <div class="controls">
            @Html.PasswordFor(m => m.Password, new { @class = "input-validation-error input-xlarge" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    
    <div>
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
    </div>
    
    <div class="control-group">
        <label class="control-label" for="button1id"></label>
        <div class="controls">
            <input type="submit" value="Log In" class="btn btn-primary" />
        </div>
        <br />
    </div>
}